{
  "manifest_version": 2,
  "name": "PropMate",
  "description": "Enhance property browsing experience on Trademe",
  "version": "0.10.1",
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PropMate",
    "default_icon": "icon.png"
  },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": [
        "*://*.trademe.co.nz/*",
        "*://*.myrent.co.nz/*",
        "*://*.oneroof.co.nz/*",
        "*://*.realestate.co.nz/*"
      ],
      "run_at": "document_end",
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "https://maps.googleapis.com/*"]
}
